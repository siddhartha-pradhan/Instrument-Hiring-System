@model InstrumentHiringSystem.Models.Instrument

@{
    ViewData["Title"] = "Instruments";
}

<partial name="_Notification" />

<h1 class="mb-4">Instrument Index</h1>

<div class="row mb-3">
    <div class="col-6">
        <h2 class="text-primary">List of Instruments</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fa-solid fa-plus"></i> &nbsp; Create A New Instrument</a>
    </div>
</div>

<div class="p-2 border rounded">
    <table id="tableData" class="table table-striped table-bordered" style="width:100%">
        <thead class="mt-2">
            <tr class="table-info">
                <th class="text-center">Title</th>
                <th class="text-center">Standard Number</th>
                <th class="text-center">Author</th>
                <th class="text-center">Category</th>
                <th class="text-center">Cover Type</th>
                <th class="text-center">Price</th>
                <th class="text-center">Options</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/instrument.js"></script>
}