@model InstrumentHiringSystem.Models.ViewModels.InstrumentViewModel

@{
    ViewData["Title"] = "Instrument";
}

<h1 class="mb-4">Instrument Index</h1>

<form method="post">
    <div class="row mb-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <h2 class="text-primary">Delete an existing instrument</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <input asp-for="Instrument.ID" class="form-control" type="hidden" />
                <div class="col-4">
                    <label asp-for="Instrument.Title"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="Instrument.Title" class="form-control" disabled />
                </div>
                <div class="col-4">
                    <label asp-for="Instrument.StandardNumber"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="Instrument.StandardNumber" class="form-control" disabled />
                </div>
                <div class="col-4">
                    <label asp-for="Instrument.Author"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="Instrument.Author" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-dark text-white form-control">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
