@model InstrumentHiringSystem.Models.Company

@{
    ViewData["Title"] = "Company";
}

<h1 class="mb-4">Company Index</h1>

<form method="post">
    <div class="row mb-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <h2 class="text-primary">Delete an existing company</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <input asp-for="ID" class="form-control" type="hidden" />
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="Name" class="form-control" disabled />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="StreetAddress"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="StreetAddress" class="form-control" disabled />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="City"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="City" class="form-control" disabled />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="State"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="State" class="form-control" disabled />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="PostalCode"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="PostalCode" class="form-control" disabled />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="PhoneNumber" class="form-control" disabled />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-dark text-white form-control">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>